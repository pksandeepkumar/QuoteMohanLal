<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
xmlns:ripple="http://schemas.android.com/apk/res-auto"
style="@style/card_main_activity"
android:layout_width="match_parent"
    android:id="@+id/crdMain"
android:layout_height="wrap_content"
card_view:cardBackgroundColor="#FFFFFF"
card_view:cardCornerRadius="@dimen/list_card_radious"
card_view:cardElevation="@dimen/list_card_elevation">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<RelativeLayout
    android:id="@+id/rlTopLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#30000000">

    <com.andexert.library.RippleView
        android:id="@+id/rplAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ripple:rv_type="rectangle"
        ripple:rv_centered="false">

        <ImageView
            android:id="@+id/imAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_avatar"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_toRightOf="@+id/imAvatar"
            android:id="@+id/tvAUthorName"
            android:text="Author Name"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:textStyle="italic"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"/>

    </com.andexert.library.RippleView>


    <com.andexert.library.RippleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ripple:rv_type="rectangle"
        ripple:rv_centered="false"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">
    <ImageButton
        android:id="@+id/imShare"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_share"
        android:background="#00000000"
        />
    </com.andexert.library.RippleView>

</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_margin="10dp"
            android:id="@+id/tvQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    </RelativeLayout>

</LinearLayout>


</android.support.v7.widget.CardView>



